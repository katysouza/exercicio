algoritmo "questao2"
var
idade: inteiro

inicio
escreva("Digite sua idade: ")
leia(idade)

se idade < 0 entao
        escreva("Idade inválida!")
    senao
    se idade < 12 entao
       escreva("Você é uma criança.")
    senao
         se idade < 18 entao
         escreva("Você é um adolescente.")
    senao
    se idade < 60 entao
       escreva("Você é um adulto.")
    senao
         escreva("Você é um idoso.")
fimse
fimse
fimse
fimse
fimalgoritmo
